<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_media"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_media_take"
        android:contentDescription="@null"
        android:layout_gravity="center"
        android:layout_marginVertical="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_video_flag"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="@id/iv_media"
        app:layout_constraintBottom_toBottomOf="@id/iv_media"
        android:padding="1dp"
        android:src="@mipmap/icon_play_gray"
        android:contentDescription="@string/image_view"/>

    <ImageView
        android:id="@+id/iv_cross"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="@id/iv_media"
        app:layout_constraintTop_toTopOf="@id/iv_media"
        android:padding="1dp"
        android:src="@mipmap/icon_cross_circle_gray"
        android:contentDescription="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>